<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IconManager"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="IconManager.MainWindow"
        Title="Symbol Icon Manager">
    <TabControl>
        <!-- Icon Sets -->
        <TabItem Header="Icon Sets"
                 IsSelected="True">
            <local:IconSetsView />
        </TabItem>
        <!-- Font Builder -->
        <TabItem Header="Font Builder"
                 IsVisible="False">
            <Grid />
        </TabItem>
        <!-- Icon Mapping -->
        <TabItem Header="Icon Mapping">
            <local:IconMappingView />
        </TabItem>
        <!-- Application Tools -->
        <TabItem Header="App Tools">
            <local:AppToolsView />
        </TabItem>
    </TabControl>
</Window>
